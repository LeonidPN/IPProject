@model IEnumerable<IPProject.Models.News>

@if (Model != null)
{
    foreach (var n in Model)
    {
        <div class="news_item">
            <h3>@n.Title</h3>
            <img src="~/Content/Upload/Images/@n.ImageUrl">
            <p>
                @n.Description
            </p>
            <div class="news_item_go"><a href="/News/News/@n.Id">Подробнее</a></div>
        </div>
    }
}
