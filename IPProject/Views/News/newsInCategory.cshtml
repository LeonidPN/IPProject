
@{
    Layout = "~/Views/Layout/_Layout.cshtml";
}

@{
    ViewBag.Title = "Новости по категории";
}

<div class="news_body">
    <h2>@ViewBag.Category</h2>
    @if (ViewBag.News != null)
    {
        foreach (var n in ViewBag.News)
        {
            <div class="news_item">
                <h3>@n.Title</h3>
                <img src="~/Content/Upload/Images/@n.ImageUrl">
                <p>
                    @n.Description
                </p>
                <div class="news_item_go"><a href="/News/News/@n.Id">Подробнее</a></div>
            </div>
        }
    }
</div>
