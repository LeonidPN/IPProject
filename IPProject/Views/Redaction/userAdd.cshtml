
@{
    Layout = "~/Views/Layout/_LayoutRedaction.cshtml";
}

@{
    ViewBag.Title = "Добавление пользователя";
}

<div class="add_body">
    <form action="/Redaction/UserAdd" method="POST" class="add">
        <input type="hidden" value="@ViewBag.Id" name="id">
        <div class="form_div">
            <p>
                Логин
            </p>
            <input type="text" name="login" class="input_title" value="@ViewBag.Login">
        </div>
        <div class="form_div">
            <p>
                Пароль
            </p>
            <input type="password" name="pass" class="input_title" value="@ViewBag.Password">
        </div>
        <div class="form_div">
            <p>
                Имя
            </p>
            <input type="text" name="firstname" class="input_title" value="@ViewBag.FirstName">
        </div>
        <div class="form_div">
            <p>
                Фамилия
            </p>
            <input type="text" name="lastname" class="input_title" value="@ViewBag.LastName">
        </div>
        <div class="form_div">
            <input type="submit" value="Отправить">
        </div>
    </form>
</div>
